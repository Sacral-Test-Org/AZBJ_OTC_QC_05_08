{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine",
      "node"
    ],
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "skipLibCheck": true
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "src/app/features/qc/same-bank-details/same-bank-details.component.spec.ts",
    "src/app/features/pan-card-validation/pan-card-validation.component.spec.ts",
    "src/app/features/save-bank-details/save-bank-details.component.spec.ts",
    "src/app/features/view-docs/view-docs.component.spec.ts",
    "src/app/features/display-section/display-section.component.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}